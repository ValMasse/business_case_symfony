{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ question.position }}</td>
            </tr>
            <tr>
                <th>Enoncé</th>
                <td>{{ question.enonce }}</td>
            </tr>
            <tr>
                <th>Est Eliminatoire ?</th>
                <td>{{ question.estEliminatoire ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-info">
    <a href="{{ path('question_index') }}">Retour à la liste</a>
    </button>

    <button type="button" class="btn btn-warning">
    <a href="{{ path('question_edit', {'id': question.id}) }}">Modifier</a>
    </button>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
