{% extends 'base.html.twig' %}

{% block title %}TestTechnique{% endblock %}

{% block body %}
    <h1>Test Technique N° {{ test_technique.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Intitulé</th>
                <td>{{ test_technique.intitule }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ test_technique.date|date("m/d/Y") }}</td>
            </tr>
        </tbody>
    </table>
    <h4>Voici la liste des questions composant ce Test Technique:</h4>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Intitulé</th>
        </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            {% if question.testsTechniques %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.enonce }}</td>            
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Ce Test ne contient encore aucune Question</td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>

    <h4>Liste des Questions disponibles </h4>
    {% for question in questions %}

    {{ question.id }}

    {% endfor %}
    <br><br>

    <button type="button" class="btn btn-info">
    <a href="{{ path('test_technique_index') }}">Retour à la liste</a>
    </button>

    <button type="button" class="btn btn-warning">
    <a href="{{ path('test_technique_edit', {'id': test_technique.id}) }}">Modifier</a>
    </button>

    {{ include('test_technique/_delete_form.html.twig') }}
{% endblock %}
