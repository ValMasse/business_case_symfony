{% block title %}TestTechnique{% endblock %}

{% block body %}
    <h1>Test Technique N° {{ test_technique.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Intitulé</th>
                <td>{{ test_technique.intitule }}</td>
