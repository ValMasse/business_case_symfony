{% extends 'base.html.twig' %}

{% block title %}TestTechnique index{% endblock %}

{% block body %}
    <h1>Tests Techniques</h1>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Intitulé du Test Technique</th>
                <th>Date de création</th>
                <th>actions</th>
                <th>(Dés)activer</th>
            </tr>
        </thead>
        <tbody>
        {% for test_technique in test_techniques %}
            <tr>
                <td>{{ test_technique.id }}</td>
                <td>{{ test_technique.intitule }}</td>
                <td>{{ test_technique.date|date("m/d/Y") }}</td>
                <td>
                    <button type="button" class="btn btn-secondary">
                    <a href="{{ path('test_technique_show', {'id': test_technique.id}) }}">Détails</a>
                    </button>

                    <button type="button" class="btn btn-info">
                    <a href="{{ path('test_technique_edit', {'id': test_technique.id}) }}">Modifier</a>
                    </button>
                </td>
                
                {% if test_technique.estActif == true %}
                <td>                
                    <button type="button" class="btn btn-outline-danger">
                    <a href="{{ path('test_technique_activate', {'id': test_technique.id}) }}">Désactiver</a>
                    </button>
                </td>
                {% else %}
                <td>
                    <button type="button" class="btn btn-outline-success">
                    <a href="{{ path('test_technique_activate', {'id': test_technique.id}) }}">Activer</a>
                    </button>
                </td>  
                {% endif %}             
            </tr>
        {% else %}
            <tr>
                <td colspan="2">Pas de Résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-warning">
    <a href="{{ path('test_technique_new') }}">Créer un Test Technique</a>
    </button>
{% endblock %}
