{% extends 'base.html.twig' %}

{% block title %}Créer son Compte{% endblock %}



{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <link href="style/register.css" rel="stylesheet" >

<br>
<h1 class="titre">Création de Compte</h1>
    <br>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Prénom : '
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Nom : '
        }) }}
        {{ form_row(registrationForm.email, {
            label: 'Adresse mail'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        <br>
        {{ form_row(registrationForm.accepterLesConditions) }}
        <br>
        <div class="boutonJaune" style="text-align:center">
        <button type="submit" class="btn btn-warning">Créer mon compte</button>
    {{ form_end(registrationForm) }}
        </div>

    
{% endblock %}
