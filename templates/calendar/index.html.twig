{% extends 'base.html.twig' %}

{% block title %}Calendar index{% endblock %}

{% block body %}
    <h1>Entretiens</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendar in calendars %}
            <tr>
                <td>{{ calendar.id }}</td>
                <td>{{ calendar.title }}</td>
                <td>{{ calendar.start ? calendar.start|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ calendar.end ? calendar.end|date('d-m-Y H:i:s') : '' }}</td>
                <td>{{ calendar.description }}</td>
                <td>
                    <button type="button" class="btn btn-secondary">
                    <a href="{{ path('calendar_show', {'id': calendar.id}) }}">Détails</a>
                    </button>
                    <button type="button" class="btn btn-info">
                    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}">Modifier</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Pas de résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="submit" class="btn btn-warning">
    <a href="{{ path('calendar_new') }}">Créer un évènement</a>
    </button>
{% endblock %}
