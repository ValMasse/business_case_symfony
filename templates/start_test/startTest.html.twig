{% extends 'base.html.twig' %}

{% block title %}Start Test Technique
{% endblock %}

{% block body %}
<br>
	<h1 style="text-align:center">Test Technique en cours ...</h1>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Intitul√©</th>
			</tr>
		</thead>
		<tbody>
				{% for test_technique in tests_techniques %}
                {% if test_technique.estActif == true %}
                    {% for question in test_technique.questions %}
					
				<tr>
					<td>{{ question.id }}</td>
					<td>{{ question.enonce }}</td>
				</tr>
                <br>				
				{% for reponsePossible in question.reponsesPossibles %}
				<tr>
					<td>{{ reponsePossible.intitule }}</td>
				</tr>
                    {% endfor %}
					{% endfor %}
                {% endif %}
			{% endfor %}
		</tbody>
	</table>

	<br><br>

	<button type="button" class="btn btn-danger">
		<a href="{{ path('homepage') }}">Abandonner</a>
	</button>

{% endblock %}

