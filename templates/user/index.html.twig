{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des Candidats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>DateDeNaissance</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>NumeroPE</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.numeroPE }}</td>
                <td>{{ user.commentaire }}</td>
                <td>
                    <button type="button" class="btn btn-secondary">
                    <a href="{{ path('user_show', {'id': user.id}) }}">Détails</a>
                    </button>
                    <button type="button" class="btn btn-info">
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">Pas de Résultats</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-warning">
    <a href="{{ path('user_new') }}">Créer un nouveau Candidat</a>
    </button>
{% endblock %}
