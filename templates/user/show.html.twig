{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.firstname }} {{ user.lastname }}</h1>

    <table class="table">
        <tbody>
            <br>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>DateDeNaissance</th>
                <td>{{ user.dateDeNaissance ? user.dateDeNaissance|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Numéro de Téléphone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Identifiant Pole-Emploi</th>
                <td>{{ user.numeroPE }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ user.commentaire }}</td>
            </tr>
            <tr>
                <th>CV</th>
                <td><a>{{ user.cv }}</a></td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-info">
    <a href="{{ path('user_index') }}">retour à la liste</a>
    </button>

    <button type="button" class="btn btn-warning">
    <a href="{{ path('user_edit', {'id': user.id}) }}">modifier</a>
    </button>

    {{ include('user/_delete_form.html.twig') }}

{% endblock %}
