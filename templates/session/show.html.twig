{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session N° {{ session.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>NuLieuméro</th>
                <td>{{ session.villeSession }}</td>
            </tr>
            <tr>
                <th>Formation concernée</th>
                <td>{{ session.formation }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ session.date ? session.date|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-info">
    <a href="{{ path('session_index') }}">retour à la liste</a>
    </button>

    <button type="button" class="btn btn-warning">
    <a href="{{ path('session_edit', {'id': session.id}) }}">modifier</a>
    </button>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
